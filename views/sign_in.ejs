<link rel="stylesheet" href="/css/sign-in.css" >
<div id="sign_up">
        <form method="POST" action="/user/createSession">
       <h1>Sign-Up!</h1>
      <div class="form-control">
          <i class="fa fa-envelope" aria-hidden="true"></i>  <input type="text" name="email" placeholder="Enter email.." required />
      </div>
      <div class="form-control">
          <i class="fa fa-lock"></i> <input type="password" name="password" placeholder="Type password..." required />
      </div>
      <div class="form-submit">
          <button type="submit" name="submit" >SignIn</button>
      </div>
      <h3><a href='/user/sign-up/'>Sign-up Here</a></h3>
    </form>
</div>
         
